<Window
    x:Class="Compresion_RAR.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Compressor"
    Width="600"
    Height="600"
    FontFamily="Segoe UI"
    FontSize="14"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="DodgerBlue"
                Text="Compressor/Decompressor App" />

            <Border
                Margin="20"
                Padding="8"
                Background="#DFDFDD"
                BorderBrush="Gray"
                BorderThickness="5"
                CornerRadius="15">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="File Compression : " />

                    <StackPanel Orientation="Horizontal">
                        <Button
                            Width="150"
                            Height="40"
                            VerticalAlignment="Center"
                            Click="FileSectionButton_Click"
                            Content="File Compression" />
                        <Button
                            Width="150"
                            Height="40"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Click="FilesSectionButton_Click"
                            Content="Files Compression" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border
                Margin="20"
                Padding="8"
                Background="#DFDFDD"
                BorderBrush="Gray"
                BorderThickness="5"
                CornerRadius="15">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Folder Compression : " />

                    <StackPanel Orientation="Horizontal">
                        <Button
                            Width="150"
                            Height="40"
                            Click="FolderCompressionButton_Click"
                            Content="Compress Folder" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border
                Margin="20"
                Padding="8"
                Background="#DFDFDD"
                BorderBrush="Gray"
                BorderThickness="5"
                CornerRadius="15">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Select Compression Algorithm :   " />

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <RadioButton
                            x:Name="HuffmanRadioButton"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="Huffman   "
                            GroupName="CompressionAlgorithm"
                            IsChecked="True" />
                        <RadioButton
                            x:Name="ShannonFanoRadioButton"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="Shannon-Fano"
                            GroupName="CompressionAlgorithm" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border
                Margin="20"
                Padding="8"
                Background="#DFDFDD"
                BorderBrush="Gray"
                BorderThickness="5"
                CornerRadius="15">
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Password Protection (Optional)" />

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <CheckBox
                            x:Name="PasswordCheckBox"
                            Margin="0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Checked="PasswordCheckBox_Checked"
                            Content=" Set Password  "
                            Unchecked="PasswordCheckBox_Unchecked" />

                        <PasswordBox
                            x:Name="PasswordBox"
                            Width="250"
                            Margin="10"
                            HorizontalAlignment="Center"
                            IsEnabled="False" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>
