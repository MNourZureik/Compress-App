<Window
    x:Class="Compresion_RAR.Views.FilesSectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Compresion_RAR.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Files Compressor/Decompressor"
    Width="350"
    Height="200"
    FontFamily="Segoe UI"
    FontSize="14"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">

            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Foreground="DodgerBlue"
                Text="Files Compression" />

            <Border
                Padding="8"
                Background="#DFDFDD"
                BorderBrush="Gray"
                BorderThickness="5"
                CornerRadius="15">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="35"
                        Click="CompressFilesButton_Click"
                        Content="Compress Files" />
                    <Button
                        Width="120"
                        Height="35"
                        Click="DecompressFilesButton_Click"
                        Content="Decompress Files" />
                </StackPanel>


            </Border>

        </StackPanel>
    </Grid>
</Window>
