<Window
    x:Class="Compresion_RAR.Views.FileSectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="File Compressor/Decompressor"
    Width="350"
    Height="200"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">

            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Foreground="DodgerBlue"
                Text="File Compression" />

            <Border
                Padding="8"
                Background="#DFDFDD"
                BorderBrush="Gray"
                BorderThickness="5"
                CornerRadius="15">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="35"
                        Click="CompressFileButton_Click"
                        Content="Compress File" />
                    <Button
                        Width="120"
                        Height="35"
                        Click="DecompressFileButton_Click"
                        Content="Decompress File" />
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>